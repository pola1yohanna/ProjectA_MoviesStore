@model IList<Movie>
@{
    ViewData["Title"] = "ViewMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="text-center">
        <h1 class="display-4">Delete</h1>
        <div class="grid-container">
            <a class="btn disabled grid-item" asp-action="ViewMovies" >View Movies</a>
            <a class="btn btn-info grid-item" asp-action="Add">Add Movie</a>
            <button class="btn btn-info grid-item btn-info" type="button" data-toggle="modal" data-target="#myModal">Change Movie</button>
            <div class="modal fade" id="myModal" role="dialog">
                <partial name="Search" />
            </div>
        </div>
    </div>
    <div>
        @if (Model.Count() > 0)
        {

            <div style="margin:2vh 0">
                <table class="table-dark table table-striped m-auto">
                    <thead>
                        <tr>
                            <th >Name</th>
                            <th >Genre</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td >@item.Name</td>
                                <td >@item.Genre</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <h1 class="text-center display-4">There No Movies to View</h1>
        }
    </div>


