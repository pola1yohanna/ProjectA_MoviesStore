@model IList<Movie>
@{
    ViewData["Title"] = "ViewMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="text-center">
        <h1>ViewMovies</h1>
        <div class="grid-container">
            <a class="btn btn-primary grid-item" disabled>View Movies</a>
            <a class="btn btn-outline-primary grid-item" asp-action="Add">Add Movie</a>
            <a class="btn btn-primary grid-item">Edit Movie</a>
            <a class="btn btn-outline-primary grid-item">Delete Movie</a>
        </div>
    </div>
    <div>
        @if (Model.Count() > 0)
        {

            <div style="margin:2vh 0">
                <table class="table-dark table table-striped m-auto">
                    <thead>
                        <tr>
                            <th >Name</th>
                            <th >Genre</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td >@item.Name</td>
                                <td >@item.Genre</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <h1 class="text-center display-4">There No Movies to View</h1>
        }
    </div>


